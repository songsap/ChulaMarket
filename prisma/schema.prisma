// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User{
  id            Int     @id @default(autoincrement())
  name          String
  student_id    String  @unique
  password      String
  telephone     String
  email         String
  account       Account[]
  address       Address[]
  shop          Shop[]
}

model Account{
  id            Int     @id @default(autoincrement())
  student_id    String
  balance       Int
  user          User    @relation(fields: [student_id],references: [student_id])
  shop          Shop[]
}

model Address{
  id            Int     @id @default(autoincrement())
  student_id    String
  address       String  
  user          User    @relation(fields: [student_id],references: [student_id])
}

model Shop{
  id            Int     @id @default(autoincrement())
  student_id    String
  account_id    Int
  name          String
  imageUrl      String
  description   String
  product       Product[]
  user          User    @relation(fields: [student_id],references: [student_id])
  account       Account @relation(fields: [account_id],references: [id])
}

model GroupProduct{
  id            Int     @id @default(autoincrement())
  name          String
  product       Product[]
}

model Product{
  id                Int     @id @default(autoincrement())
  shop_id           Int     
  student_id        String
  name              String
  groupProduct_id   Int
  imageUrl          String
  price             String
  amount            String
  description       String
  shop              Shop          @relation(fields: [shop_id],references: [id])
  groupProduct      GroupProduct  @relation(fields: [groupProduct_id],references: [id])
}

model Order{
  id                      Int     @id @default(autoincrement())
  student_id_seller       String
  shop_id                 Int
  product_id              String
  student_id_buyer        String
  address_buyer           String
  totalprice              Int
  status                  String
  track                   String
  shippingCompany_id      Int
  groupShippingCompany    GroupShippingCompany  @relation(fields: [shippingCompany_id],references: [id])
}

model GroupShippingCompany{
  id                      Int     @id @default(autoincrement())
  name                    String
  order                   Order[]
}

